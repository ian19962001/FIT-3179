{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Fuel and gas prices around the world",
  "width": 800,
  "height": 400,
  "projection": {"type": "equalEarth"},
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/ian19962001/FIT-3179/main/IanThomasMathew_32318871/js/ocean_map.topojson",
        "format": {"type": "topojson", "feature": "oceans"}
      },
      "mark": {"type": "geoshape", "fill": "skyblue"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/ian19962001/FIT-3179/main/IanThomasMathew_32318871/js/ne_110m.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/ian19962001/FIT-3179/main/IanThomasMathew_32318871/data/Petrol%20Dataset%20June%2020%202022%20FINAL%20IAN.csv"
            },
            "key": "Country",
            "fields": ["Daily Oil Consumption (Barrels)"]
          }
        }
      ],
      "mark": {"type": "geoshape", "stroke": "black"},
      "encoding": {
        "color": {
          "field": "Daily Oil Consumption (Barrels)", 
          "type": "quantitative",
          "scale": {"type": "linear"}
        },
        "tooltip": [
          {"field": "properties.NAME", "type": "nominal", "title": "Country"},
          {"field": "Daily Oil Consumption (Barrels)", "type": "quantitative"}
        ]
      }
    }
  ]
}