{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Country gas/fuel prices",
  "width": 800,
  "height": 400,
  "projection": {"type": "equalEarth"},
  "data": {
    "url": "https://raw.githubusercontent.com/ian19962001/FIT-3179/main/IanThomasMathew_32318871/js/ne_110m_admin_0_countries.topojson",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
  "transform": [
    {
      "lookup": "properties.NAME",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/ian19962001/FIT-3179/main/IanThomasMathew_32318871/data/Petrol%20Dataset%20June%2023%202022%20--%20Version%202.csv"
        },
        "key": "Country",
        "fields": ["Price Per Liter (USD)"]
      }
    }
  ],
  "mark": {"type": "geoshape"},
  "encoding": {
    "color": {
      "field": "Price Per Liter (USD)",
      "type": "quantitative"
    },
    "tooltip": [
      {"field": "properties.NAME", "type": "nominal", "title": "Country"},
      {"field": "Price Per Liter (USD)", "type": "quantitative"}
    ]
  }
}